<script>
$(function() { 
  $("#items").tablesorter( {sortList: [[0,0]], headers: { 3: {sorter: false}, 4: {sorter: false} }} );   
});
</script>

<h2>Items List</h2>
<table id="items" class="table table-striped items tablesorter">
  <thead>
    <tr>
      <th class="header">Item ID</th>
      <th class="header">Status</th>
      <th class="header">Batch Id</<th>
      <th>Style Type</th>
      <th>Style</th>
    </tr>
  </thead>
  <tbody>
    <%- @items.each do |item| -%>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.status %></td>
        <td><%= item.clearance_batch_id%> </td>
        <td><%= item.style.type %></td>
        <td><%= item.style.name%>(<%= item.size%>)</td>
      </tr>
    <%- end -%>
  </tbody>
</table>